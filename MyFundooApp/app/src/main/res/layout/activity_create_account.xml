<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user_module.CreateAccountActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="193dp"
        android:layout_height="175dp"
        android:cropToPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.079"
        app:srcCompat="@drawable/keepicon"
        android:contentDescription="@string/welcome_text"/>

    <TextView
        android:id="@+id/tv_create_heading"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:gravity="center"
        android:text="@string/create_act"
        android:textColor="#252222"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.059" />

    <EditText
        android:id="@+id/accountNameET"
        android:layout_width="325dp"
        android:layout_height="43dp"
        android:hint="@string/name"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_create_heading"
        app:layout_constraintHorizontal_bias="0.453"
        app:layout_constraintStart_toStartOf="@+id/tv_create_heading"
        app:layout_constraintTop_toBottomOf="@+id/tv_create_heading"
        app:layout_constraintVertical_bias="0.022" />

    <TextView
        android:id="@+id/createAccountTextInputName"
        android:layout_width="314dp"
        android:layout_height="24dp"
        android:textColor="#F00"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/accountNameET"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/accountNameET"
        app:layout_constraintTop_toBottomOf="@+id/accountNameET"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/accountEmailET"
        android:layout_width="332dp"
        android:layout_height="45dp"
        android:layout_marginTop="32dp"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:textColor="#1A1919"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/accountNameET"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/accountNameET"
        app:layout_constraintTop_toBottomOf="@+id/accountNameET" />

    <TextView
        android:id="@+id/createAccountTextInputEmail"
        android:layout_width="314dp"
        android:layout_height="24dp"
        android:textColor="#F00"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/accountEmailET"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/accountEmailET"
        app:layout_constraintTop_toBottomOf="@+id/accountEmailET"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/accountPasswordET"
        android:layout_width="332dp"
        android:layout_height="45dp"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:textColor="#1A1919"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/accountEmailET"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/accountEmailET"
        app:layout_constraintTop_toBottomOf="@+id/accountEmailET"
        app:layout_constraintVertical_bias="0.123" />

    <TextView
        android:id="@+id/createAccountTextInputPassword"
        android:layout_width="314dp"
        android:layout_height="24dp"
        android:textColor="#F00"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/accountPasswordET"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/accountPasswordET"
        app:layout_constraintTop_toBottomOf="@+id/accountPasswordET"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/accountCreateActBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#f9a602"
        android:text="@string/submit"
        android:textColor="#fff"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createAccountTextInputPassword"
        app:layout_constraintVertical_bias="0.218" />

    <TextView
        android:id="@+id/loginTextLink"
        android:layout_width="314dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="@string/have_account"
        android:textColor="#268ADA"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/accountCreateActBtn"
        app:layout_constraintVertical_bias="0.316" />

</androidx.constraintlayout.widget.ConstraintLayout>